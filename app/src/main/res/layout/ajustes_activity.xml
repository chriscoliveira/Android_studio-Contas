<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"

    tools:context=".renda.RendaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toolbar_ajustes"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btImportar"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:background="@drawable/borda_arredondado"
        android:text="Importar"
        android:textColor="@color/colorPrimaryDark6"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btExportar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_main"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btExportar"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/borda_arredondado"
        android:text="Exportar"
        android:textColor="@color/colorPrimaryDark6"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btLimpar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btImportar" />

    <Button
        android:id="@+id/btLimpar"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:background="@drawable/borda_arredondado"
        android:text="Limpar Banco"
        android:textColor="@color/colorPrimaryDark6"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tvVersao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btExportar" />

    <TextView
        android:id="@+id/tvVersao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="bottom|right"
        android:text="Versao"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="45dp" />

</android.support.constraint.ConstraintLayout>
